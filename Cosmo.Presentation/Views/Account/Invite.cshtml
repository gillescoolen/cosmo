@model Cosmo.Presentation.Models.Account.InviteViewModel
@{
    ViewData["Title"] = "Invite";
}

<h1>@ViewData["Title"]</h1>
<h5>Invite a visitor.</h5>
<div class="row">
    <div class="col-md-12">
        <section>
            <form asp-action="Invite">
                <hr />
                <div asp-validation-summary="All" class="text-danger"></div>
                <div class="form-group">
                    <label>Identifier</label>
                    <input asp-for="Username" class="form-control" />
                    <span asp-validation-for="Username" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="License"></label>
                    <select asp-for="License" class="form-control">
                        <option value="A">License Type A</option>
                        <option value="B">License Type B</option>
                        <option value="C">License Type C</option>
                        <option value="Z">License Type Z</option>
                    </select>
                    <span asp-validation-for="License" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <button type="submit" class="btn btn-primary">Invite</button>
                </div>
            </form>
        </section>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
